@model AnimalStore2.Models.Order
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "AnimalStore: форма заказа";
}

<h2>Оформити замовлення зараз</h2>
<p>Будь-ласка введіть свої контактні дані!</p>


@using (Html.BeginForm())
{@Html.ValidationSummary();
<h3>Дані</h3>
<div class="form-group">
    <label>Ваше ім'я:</label>

    @if (!User.Identity.IsAuthenticated)
    {
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    }
    @if (User.Identity.IsAuthenticated)
    {
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", Value = User.Identity.Name.ToString() })
    }

</div>


<div class="form-group">
    <label>Адрес доставки:</label>
    @Html.TextBoxFor(x => x.Line1, new { @class = "form-control" })
</div>

<div class="form-group">
    <label>Номер телефону:</label>
   
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
   

</div>
<div class="form-group">
    <label>Email:</label>
   
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
   
</div>

<h3>Опції</h3>


<div class="text-center">
    <input class="btn btn-primary" type="submit" value="Обробити замовлення" />
</div>
}

